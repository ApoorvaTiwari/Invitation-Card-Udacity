<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apoorva.invitationcard.MainActivity">

    <ImageView
        android:src="@drawable/holi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/amarante"
        android:text="You Are Invited!!"
        android:textColor="#FF8F00"
        android:textSize="45sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/great_vibes"
        android:text="Join us in the"
        android:textColor="#ffffff"
        android:textSize="42sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/great_vibes"
        android:text="celebration of"
        android:textColor="#ffffff"
        android:textSize="42sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/chewy"
        android:text="HOLI"
        android:textColor="#C6FF00"
        android:textSize="60sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:fontFamily="serif"
        android:text="March 2, Friday"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="330dp"
    android:fontFamily="sans-serif-condensed"
    android:text="LIVE MUSIC | OPEN BAR"
    android:textColor="#ffffff"
    android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:fontFamily="sans-serif-condensed"
        android:text="FREE PRIZES | GIVEAWAYS"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:fontFamily="@font/miltonian"
        android:text="FREE ENTRY"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Host: Apoorva Tiwari "
        android:layout_marginTop="460dp"
        android:textColor="#FFECB3"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="488dp"
        android:fontFamily="serif"
        android:text="Venue: Hyderabad, India"
        android:textColor="#FFECB3"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
